<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
 
<struts>
	<package name="customer_package" namespace="/customerAction" extends="json-default,interceptor" strict-method-invocation="false">
		<action name="*" class="customerAction" method="{1}">
			<result name="cust_index">
				/WEB-INF/views/customer/customerList.jsp
			</result>

			<result name="toLogin">
				/WEB-INF/views/main/login.jsp
			</result>

			<result name="add_success" type="redirect">
				/customerAction/list.action
			</result>

			<result name="delete_success" type="json">
				<param name="root">deleteJson</param>
			</result>

			<result name="detail_success" type="json">
				<param name="root">detailJson</param>
			</result>

			<result name="update_success" type="json">
				<param name="root">updateJson</param>
			</result>

			<interceptor-ref name="loginInterceptorStack"/>
		</action>
	</package>
</struts> 
     