<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
 
<struts>
	<package name="authority_package" namespace="/authorityAction" extends="json-default,interceptor" strict-method-invocation="false">

		<action name="*" class="authorityAction" method="{1}">
			<result name="login_success" type="redirect">
				/customerAction/list.action
			</result>

			<result name="toLogin">
				/WEB-INF/views/main/login.jsp
			</result>

			<interceptor-ref name="loginInterceptorStack"/>
		</action>

	</package>

</struts>
