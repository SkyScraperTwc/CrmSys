<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.scut.crm.dao.po.Customer" table="customer">
    
        <id name="id" type="integer">
            <column name="id" />
            <generator class="native" />
        </id> 
         
        <property name="name" type="string">
            <column name="name" />
        </property>
          
        <property name="zipcode" type="string">
            <column name="zipcode" />
        </property>
        
        <property name="phone" type="string">
            <column name="phone" />
        </property>

        <property name="address" type="string">
            <column name="address" />
        </property>

        <property name="level" type="string">
            <column name="level" />
        </property>

        <property name="source" type="string">
            <column name="source" />
        </property>

        <property name="industry" type="string">
            <column name="industry" />
        </property>

        <property name="annualTurnover" type="string">
            <column name="annualTurnover" />
        </property>

        <property name="nature" type="string">
            <column name="nature" />
        </property>

        <property name="opportunity" type="string">
            <column name="opportunity" />
        </property>

        <property name="createTime" type="date">
            <column name="createTime" />
        </property>

        <property name="editTime" type="date">
            <column name="editTime" />
        </property>

        <many-to-one name="user" class="com.scut.crm.dao.po.User" column="userId" lazy="false"/>

        <set name="contractSet" table="contract" inverse="true" lazy="false">
            <key column="customerId"/>
            <one-to-many class="com.scut.crm.dao.po.Contract"/>
        </set>
    </class>
</hibernate-mapping>
